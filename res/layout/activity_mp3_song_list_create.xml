<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mp3songlistcreator.MP3SongListCreate" 
    android:weightSum="10"
    android:orientation="vertical"
   >
   
    
     <!--  1st Child Layout  (Nested In Parent Layout) with Horizontal Orientation -->
    <LinearLayout 
    
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

     <Button
        android:id="@+id/bup"
 
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="up" 
        />

     <Button
          android:id="@+id/bdown"
 
          android:layout_marginTop="5dp"
          android:layout_marginBottom="5dp"
          android:layout_weight="1"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:text="down" 
          />
     
         <Button
        android:id="@+id/bdelete"

        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="delete" 
        />

     <Button
          android:id="@+id/bbrowse"
 
          android:layout_marginTop="5dp"
          android:layout_marginBottom="5dp"
          android:layout_weight="1"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:text="browse" 
          />
     
     
    
   </LinearLayout>
    
    
    
    
         <!--  2nd Child Layout  (Nested In Parent Layout) with Horizontal Orientation -->
    <LinearLayout 
    
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

     <Button
        android:id="@+id/bstart"
 
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="start" 
        />

     <Button
          android:id="@+id/bstop"
 
          android:layout_marginTop="5dp"
          android:layout_marginBottom="5dp"
          android:layout_weight="1"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:text="stop" 
          />
     
         <Button
        android:id="@+id/bpause"

        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="pasue" 
        />

 
     
     
    
   </LinearLayout>
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    <TextView
       android:id="@+id/tv1"
       android:text="1236546"
       android:layout_width="wrap_content"
       android:layout_weight="1"
       android:layout_height="0dp"
       android:layout_gravity="center"
       android:scaleType="centerInside"
       android:paddingTop="5dp"
       android:paddingBottom="15dp"
        />
    
    
       <ListView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:id="@+id/lv1"
      android:layout_weight="9"
/>
    
    

</LinearLayout>
