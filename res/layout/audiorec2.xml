<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools" 
   android:layout_width="match_parent"
   android:layout_height="match_parent" 
   android:paddingLeft="@dimen/activity_horizontal_margin"
   android:paddingRight="@dimen/activity_horizontal_margin"
   android:paddingTop="@dimen/activity_vertical_margin"
   android:paddingBottom="@dimen/activity_vertical_margin" 
   tools:context=".MainActivityDirShow1">

   <View
    android:id="@+id/vv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    						 />   
    
   <Button
       android:id="@+id/buttonStop"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:layout_above="@+id/buttonExit"
		android:layout_alignParentRight="true"
       android:layout_marginBottom="16dp"       
       
       android:layout_marginRight="14dp"
       android:text="Stop" />

   <Button
       android:id="@+id/buttonStart"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@+id/buttonExit"
       android:layout_alignParentLeft="true"
       android:layout_marginBottom="16dp"
       android:text="Start" />

   <Button
       android:id="@+id/buttonExit"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="40dp"
       android:text="Exit" />

   <TextView
       android:id="@+id/textView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_alignParentTop="true"
       android:layout_marginTop="28dp"
       android:layout_marginLeft="28dp"
       android:text="Audio Recording"
       android:textSize="30dp" />

      <EditText
       android:id="@+id/edFile"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView"      
       android:layout_marginTop="28dp"
       android:layout_marginLeft="28dp"
       android:text="file??"
       android:textSize="30dp" />
   
   
     <Button
       android:id="@+id/enter"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:layout_below="@+id/textView"
		android:layout_toRightOf="@+id/edFile"
 		android:layout_marginLeft="192dp"
       android:layout_marginTop="30dp"
       
       android:text="Enter" /> 
   
   <TextView
       android:id="@+id/tv1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@+id/imageView"
  android:layout_alignParentLeft="true"     
       android:layout_marginBottom="24dp"
        android:layout_marginLeft="224dp"
       android:text="00:00:00"
       android:textSize="40sp" />

   <ImageView
       android:id="@+id/imageView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@+id/buttonExit"
 android:layout_alignParentLeft="true"
 android:layout_marginLeft="232dp"
       android:layout_marginBottom="132dp"
       android:src="@drawable/recordmic" />

      <ImageView
       android:id="@+id/circle"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@+id/buttonExit"
 android:layout_toRightOf="@+id/imageView"
 android:layout_marginLeft="92dp"
       android:layout_marginBottom="132dp"
       android:src="@drawable/red50x50" />
   
   
   
</RelativeLayout>

